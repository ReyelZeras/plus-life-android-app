<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AtualizarTipoSanguineoActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/btn_voltar"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_back_red" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:text="Atualizar tipo sanguÃ­neo"
                >

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo atual"
            android:textColor="@color/black"
            android:layout_marginTop="60dp"
            >

        </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A+"
                android:layout_marginTop="10dp"
                >

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selecione o tipo"
                android:textColor="@color/black"
                android:layout_marginTop="30dp"
                ></TextView>

            <Spinner
                android:id="@+id/sp_tipo_sanguineo"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:background="@drawable/edit_text_border"
                android:padding="5dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                >

                <Button
                    android:id="@+id/btn_salvar"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/button_border"
                    android:backgroundTint="@color/pl_red"
                    android:text="Salvar"
                    android:textAlignment="center"
                    android:textColor="@color/pl_white"></Button>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_mensagem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/pl_red"
                android:textSize="15sp"
                android:textAlignment="center" />

        </LinearLayout>



    </LinearLayout>
    
    
</androidx.constraintlayout.widget.ConstraintLayout>