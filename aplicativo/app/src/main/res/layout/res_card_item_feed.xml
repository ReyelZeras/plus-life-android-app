<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    android:elevation="15dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <TextView
            android:id="@+id/tv_nome_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            tools:text="Bruno Zapateiro"
            android:textColor="@color/pl_dark_red"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tv_data_hota"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            tools:text="22/08/2022 - 14:40"
            android:textColor="@color/pl_light_gray"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:textSize="20dp"/>


    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="8dp"
            tools:text="Pessoal, a mãe de uma amiga está precisando de doação de sangue, quem puder ajudar,
            Doar em nome de: Ariane e Cassia marques Teani Martorelli
            Banco de Sangue
            Rua thomás Carvalhal 711 - Paraíso, SP.
            Tel 3373-2000
            Todos os dias da semana."
            android:textAlignment="textStart"
            android:autoSizeTextType="uniform"
            android:textColor="@color/black"
            android:background="@drawable/text_view_border"
            />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/ic_delete_outline_red"
            android:layout_gravity="end"
            />

    </LinearLayout>






</androidx.cardview.widget.CardView>